<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:id="@+id/sliding_search"
    tools:context=".SearchActivity"
    sothree:umanoPanelHeight="0dp"
    sothree:umanoShadowHeight="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/searchBtn"
        android:padding="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="right"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:src="@drawable/search"
        android:clickable="true"/>

    <TextView
        android:id="@+id/location_search"
        android:padding="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:drawableRight="@drawable/pinn"
        android:drawablePadding="12dp"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="#191919"
        android:clickable="true"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="인기추천순"
        android:textSize="14sp"
        android:textColor="#191919"
        android:drawableRight="@drawable/arrowdown"
        android:gravity="right"
        android:background="#EAEAEA"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:padding="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".96"
                android:text="검색"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:textColor="#191919"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight=".04"
                android:layout_gravity="center_vertical"
                android:src="@drawable/closeicon"
                android:clickable="true"
                android:onClick="close"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EAEAEA"/>

        <TextView
            android:id="@+id/moveintomyp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:padding="14dp"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:text="내 주변으로 검색"
            android:textColor="#353535"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:backgroundTint="#E3E3E3"
            android:clickable="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#EAEAEA"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/line_number1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".32"
                android:text="1호선"
                android:textSize="16sp"
                android:textColor="@color/lineNumber1"
                android:gravity="center"
                android:background="#FFFFFF"/>
            <TextView
                android:id="@+id/first"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".68"
                android:text="      서울역"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="#353535"
                android:background="#FFFFFF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/line_number2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".32"
                android:text="2호선"
                android:textSize="16sp"
                android:textColor="@color/disable"
                android:gravity="center"
                android:background="#E3E3E3"/>
            <TextView
                android:id="@+id/second"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".68"
                android:text="      시청역"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="#353535"
                android:background="#FFFFFF"/>
        </LinearLayout>
        <LinearLayout
