<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:scaleType="fitStart"
        android:src="@drawable/katsu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="맛있는 돈까스"
        android:textSize="40sp"
        android:textColor="#191919"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/goldstar"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/main_star"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5"
            android:textSize="28sp"
            android:textColor="#191919"/>

        <TextView
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="후기"
            android:textSize="22sp"/>


        <TextView
            android:id="@+id/main_reivew"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5,701"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/myplace"
            android:tint="#6799FF"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/main_distance"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="123m"
            android:textColor="#6799FF"/>

        <ImageView
            android:padding="2dp"
            android:layout_marginLeft="32dp"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/phone"
            android:tint="#6799FF"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="전화하기"
            android:textColor="#6799FF"/>

    </LinearLayout>

</LinearLayout>

</LinearLayout>